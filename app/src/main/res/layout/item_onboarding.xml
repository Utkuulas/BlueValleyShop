<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:srcCompat="@drawable/ic_user_friendly_ui"
            android:id="@+id/iv_onboarding_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Friendly User Interface"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_onboarding_two"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="34sp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_onboarding_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Blue Valley Shop an easy to use user interface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_description_onboarding_two"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_onboarding_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>